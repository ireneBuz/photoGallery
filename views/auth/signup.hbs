<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Register</h1>
            <hr>
            <form action="/signup" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Username</label>
                    <input type="name" class="form-control" id="name" name="username">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Select profile photo</label>
                    <input type="file" class="form-control" id="profileImg" name="profileImg" accept="image/*"
                        placeholder="Choose a profile photo">
                </div>
                <div class="mb-3">
                    <label for="text" class="form-label">Description</label>
                    <input type="name" class="form-control" id="description" name="description">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">signup</button>
                </div>
            </form>
        </div>
    </div>
</div>