<div class="container mt-5">
    <div class="row">
        {{#each allPhotosGallery}}

        <div class="col-md-4">
            <article class="photo mb-5">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top greyscale-img" src={{download_url}} alt="foto gallery">
                    <div class="card-body">
                        <h5 class="card-title">Card title</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the card's content.</p>
                        <a href="/photos/black-details/{{id}}" class="btn btn-primary">Info</a>
                    </div>
                </div>
            </article>
        </div>
        {{/each}}
    </div>
</div>





