<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Editar Perfil</h1>

            <hr>

            <form action="/user/edit-profile" method="POST">

                <div class="mb-3">
                    <label for="field1" class="form-label">Username</label>
                    <input type="text" class="form-control" id="field1" name="username" value="{{username}}">
                </div>

                <div class="mb-3">
                    <label for="field2" class="form-label">Email</label>
                    <input type="email" class="form-control" id="field2" name="email" value="{{email}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Guardar</button>
                </div>

            </form>
        </div>
    </div>

</div>